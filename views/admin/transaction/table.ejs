<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama Customer</th>
      <th>No. HP Customer</th>
      <th>Nomor Booking</th>
      <th>Merek Mobil</th>
      <th>Tipe Mobil</th>
      <th>Nomor Plat</th>
      <th>Keluhan</th>
      <th>Tanggal Servis</th>
      <th>Jam Servis</th>
      <th>Status</th>
      <th>Tipe Servis</th>
      <th>Harga</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i=0; i < transaction.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= transaction[i]?.userId?.name %></td>
      <td><%= transaction[i]?.userId?.phoneNumber %></td>
      <td><%= transaction[i]?.bookingNumber %></td>
      <td><%= transaction[i]?.carBrand %></td>
      <td><%= transaction[i]?.carType %></td>
      <td><%= transaction[i]?.licensePlate %></td>
      <td><%= transaction[i]?.notes %></td>
      <td><%= transaction[i]?.chooseDate %></td>
      <td><%= transaction[i]?.chooseTime %></td>

      <td>
        <% if(transaction[i].status=== 0 ) { %>
        <span class="badge badge-warning"> Pesan </span>
        <% } else if(transaction[i].status=== 1) { %>
        <span class="badge badge-warning"> Menunggu Konfirmasi </span>
        <% } else if(transaction[i].status=== 2 ) { %>
        <span class="badge badge-success"> Checked In </span>
        <% } else { %>
        <span class="badge badge-success"> Selesai </span>
        <%} %>
      </td>

      <td><%= transaction[i]?.category?.name %></td>
      <td><%= transaction[i]?.category?.price %></td>
      <% if(transaction[i].status=== 0 ) { %>
      <td>
        <form
          style="display: inline-block"
          action="/transaction/delete/<%= transaction[i]._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger btn-sm" type="submit">
            <i class="fas fa-times-circle"></i>
            Tolak
          </button>
        </form>
        <form
          style="display: inline-block"
          action="/transaction/status/<%= transaction[i]._id %>?status=1&_method=PUT"
          method="POST"
        >
          <button class="btn btn-info btn-sm" type="submit">
            <i class="fas fa-check"></i>
            Check In
          </button>
        </form>
      </td>
      <%} %> <% if(transaction[i].status=== 2 ) { %>
      <td>
        <form
          style="display: inline-block"
          action="/transaction/status/<%= transaction[i]._id %>?status=3&_method=PUT"
          method="POST"
        >
          <button class="btn btn-info btn-sm" type="submit">
            <i class="fas fa-check"></i>
            Check Out
          </button>
        </form>
      </td>
      <%} %>
    </tr>
    <% } %>
  </tbody>
</table>
