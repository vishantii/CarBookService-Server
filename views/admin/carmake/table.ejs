<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Make</th>
      <th>Model</th>
      <th>Category</th>
      <th>Year</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < carmake.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= carmake[i].Make %></td>
      <td><%= carmake[i].Model %></td>
      <td><%= carmake[i].Category %></td>
      <td><%= carmake[i].Year %></td>
      <td>
        <form
          action="/carmake/delete/<%= carmake[i]._id %>?_method=DELETE"
          method="POST"
        >
          <a
            href="/carmake/edit/<%= carmake[i]._id %>"
            class="btn btn-info btn-sm"
          >
            <i class="fas fa-pencil-alt"></i>
            Ubah
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
